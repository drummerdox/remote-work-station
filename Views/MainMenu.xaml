<Window x:Class="WPF_Forms.Views.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainMenu"
        Background="#627aac"
        Icon="/WPF_Forms;component/favicon.ico">
    <Grid>
        <Frame x:Name="_mainFrame"
              
               
               HorizontalAlignment="Stretch"
               VerticalAlignment="Stretch"
               HorizontalContentAlignment="Stretch"
               VerticalContentAlignment="Stretch"
               />
        <Grid Name="Grid" >
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.Resources>
                    <Style TargetType="Button">
                        <Setter Property="MinWidth"
                                Value="200"></Setter>
                    </Style>
                </Grid.Resources>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Row="0"
                          Background="#899bc1"
                          Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Image Grid.Row="0"
                               Width="40"
                               Height="40"
                               Source="/WPF_Forms;component/gear.ico" />
                        <Button Grid.Row="1"
                                Margin="20"
                                Click="Button_Click_1">Техническая инвентаризация</Button>
                    </Grid>
                    <Grid Grid.Row="0"
                          Grid.Column="1"
                          Background="#899bc1"
                          Margin="5">

                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Image Grid.Row="0"
                               Width="40"
                               Height="40"
                               Source="/Resources/clipboard.ico" />
                        <Button Grid.Row="1"
                                Margin="20"
                                Click="Button_Click_4">Инструкция</Button>
                    </Grid>
                </Grid>

            </Grid>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid  Background="#899bc1"
                       Margin="5">

                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Image Grid.Row="0"
                           Width="40"
                           Height="40"
                           Source="/Resources/check.ico" />
                    <Button Grid.Row="1"
                            Margin="20"
                            Click="Button_Click_6">Проверка хaрактеристик</Button>
                </Grid>
                <Grid  Grid.Column="1"
                       Background="#899bc1"
                       Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Image Grid.Row="0"
                           Width="40"
                           Height="40"
                           Source="/Resources/compose.ico" />
                    <Button Grid.Row="1"
                            Margin="20"
                            Click="Button_Click_5">Прейскурант</Button>
                </Grid>

            </Grid>
        </Grid>
    </Grid>
</Window>
